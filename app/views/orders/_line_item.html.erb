<tr>
  <td>
    <%= image_tag Product.find_by(id: item.product_id).image.tiny %>
  </td>
  <td>
    <h4><%= Product.find_by(id: item.product_id).name %></h4>
    <br>
    <p><%= Product.find_by(id: item.product_id).description %></p>
  </td>
  <td>
    $<%= Product.find_by(id: item.product_id).price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    $<%= Product.find_by(id: item.product_id).price * item.quantity %>
  </td>
</tr>
